<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.d1.zsan.ui.fragment.OneselfFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/et_account_frag_self"
        android:hint="帮您通行证（手机号）"
        android:maxLength="12"
        android:paddingBottom="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_password_frag_self"
        android:hint="请输入密码"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:maxLength="12"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:id="@+id/rg_stutas_self"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RadioButton
            android:id="@+id/rb_user_rg_self"
            android:text="用户"
            android:checked="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rb_doctor_rg_self"
            android:text="医生"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rb_admin_rg_self"
            android:text="管理员"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </RadioGroup>
    <Button
        android:id="@+id/bt_login_frag_self"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_long_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt_registered"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_long_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
