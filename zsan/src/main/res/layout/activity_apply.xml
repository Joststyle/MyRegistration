<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_apply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.d1.zsan.ui.activity.ApplyActivity">

    <LinearLayout
        android:id="@+id/ll_apply"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/iv_apply"
            android:src="@drawable/touxiang"
            android:layout_margin="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_name_apply"
                android:paddingTop="10dp"
                android:text="滴滴滴"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/tv_hospital_apply"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="滴滴滴"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/tv_dep_apply"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="滴滴滴"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_jiehsou_apply"
        android:text="个人介绍："
        android:textSize="18sp"
        android:layout_below="@+id/ll_apply"
        android:layout_width="90dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/tb_content_apply"
        android:layout_below="@+id/ll_apply"
        android:layout_toRightOf="@+id/tv_jiehsou_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt_subscribe_apply"
        android:layout_marginTop="80dp"
        android:layout_below="@id/tv_jiehsou_apply"
        android:text="预约挂号"
        android:layout_width="80dp"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/bt_cen_apply"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="退出"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="@drawable/button_long_selector"
        android:layout_width="200dp"
        android:layout_height="50dp"/>
</RelativeLayout>
